@model IEnumerable<Devs2Blu.ProjetosAula.MVCSQLListaProdutos.Models.Entities.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Criar nova categoria</a>
</p>
<div id="msgCat" style="display: none">
    <div class="bg-warning" style="width: 12rem;">
        <div class="card-header" id="msgHeader">
            <h3 class="text-danger"> Deseja realmente excluir o registro<span id="msgBody"></span> </h3>
            <h1></h1>

        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td> 
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-danger" href="#" onclick="deleteCategoria(@item.Id,@item.Nome)" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section scripts{

    <script>
    $Document.ready(()=>{

    });

    const deleteCategoria = (id,nome) => {
        $("#msgBody).html(`${id} - ${nome}`;
    }
    </script>

}